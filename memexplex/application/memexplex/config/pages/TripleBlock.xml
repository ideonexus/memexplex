<?xml version="1.0" encoding="ISO-8859-1"?>
<TripleBlock>
    <recordDataXpath>
        TripleList/Triple
    </recordDataXpath>
    <formfield>
        <label>Disseminate</label>
        <type>CheckboxDisseminate</type>
        <id>disseminate</id>
        <valueXpath>Published</valueXpath>
        <span>
        	<custom>style="float: right;"</custom>
        </span>
        <labelInline/>
        <nobreak/>
    </formfield>
    <formfield>
        <label></label>
        <type>Hidden</type>
        <id>datepublished</id>
        <valueXpath>DatePublished</valueXpath>
    </formfield>
    <formfield>
        <label></label>
        <type>Hidden</type>
        <id>tripleId</id>
        <valueXpath>Id</valueXpath>
    </formfield>
    <formfield>
        <label></label>
        <type>Hidden</type>
        <id>subjectId</id>
        <valueXpath>Subject/Meme/Id</valueXpath>
    </formfield>
    <formfield>
        <label></label>
        <type>Hidden</type>
        <id>objectId</id>
        <valueXpath>Object/Meme/Id</valueXpath>
    </formfield>
    <formfield>
        <label>Title</label>
        <type>Text</type>
        <id>tripleTitle</id>
        <valueXpath>Title</valueXpath>
        <methods>
        	<setSize>75</setSize>
        	<setMaxlength>250</setMaxlength>
        </methods>
    </formfield>
    <formfield>
        <label>Description</label>
        <type>TextAreaRich</type>
        <id>tripleDescription</id>
        <valueXpath>Description</valueXpath>
        <methods>
        	<setRows>10</setRows>
        	<setCols>57</setCols>
        </methods>
    </formfield>
    <formfield>
        <label><![CDATA[Folksonomies (comma-separated) <a href="http://www.memexplex.com/Meme/id=213" target="_blank">?</a>]]></label>
        <type>Taxonomy</type>
        <id>tripleTaxonomies</id>
        <valueXpath>TaxonomyList</valueXpath>
        <methods>
        	<setSize>75</setSize>
        	<setMaxlength>250</setMaxlength>
        </methods>
    </formfield>
    <formfield>
        <label><![CDATA[Predicate (Subject=>Predicate to Object)]]></label>
        <type>Select</type>
        <id>predicateid</id>
        <valueXpath>Predicate/Id</valueXpath>
        <valueDisplayXpath></valueDisplayXpath>
        <selectValuesXpath>PredicateList/Predicate/Id</selectValuesXpath>
        <selectDescriptionsXpath>PredicateList/Predicate/Description</selectDescriptionsXpath>
        <methods>
        	<setOnChangeJavaScript>$('predicateDisplay').innerHTML=this.options[this.options.selectedIndex].text</setOnChangeJavaScript>
        </methods>
    </formfield>
</TripleBlock>
