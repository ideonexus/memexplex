<?xml version="1.0" encoding="ISO-8859-1"?>
<root>
    <title>Search Amazon</title>
    <header>none</header>
	<menu>none</menu>
    <applicationmenu>none</applicationmenu>
    <javascript>
    	<script>AmazonSearch</script>
    </javascript>

    <forms>
        <form>
            <id>reportFilter</id>
        </form>
    	<ajaxCall>
            <config>ListAjaxCallForm</config>
    	</ajaxCall>
    	<filter>
			<formfield>
			    <type>Search</type>
			    <id>searchString</id>
				<methods>
					<setSize>60</setSize>
					<setMaxlength>250</setMaxlength>
				</methods>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>mine</id>
			</formfield>
			<formfield>
			    <label>Filter</label>
			    <type>SelectFilter</type>
			    <id>categoryFilter</id>
			    <selectValuesXpath>Filters/CategoryFilter/option/value</selectValuesXpath>
			    <selectDescriptionsXpath>Filters/CategoryFilter/option/description</selectDescriptionsXpath>
			    <valueXpath>FilterSelections/CategoryFilter</valueXpath>
			    <methods>
			    	<setNoEmptyOption></setNoEmptyOption>
			    </methods>
			</formfield>
			<formfield>
			    <label>Pagination</label>
			    <type>PagingNavigation</type>
			    <id>pagingNavigation</id>
       		    <totalRecordsXpath>Filters/PagingFilter/TotalRows</totalRecordsXpath>
			    <methods>
			        <setRange>5</setRange>
	        		<setRecordsPerPage>10</setRecordsPerPage>
			    </methods>
			</formfield>
    	</filter>
    	<amazonlist>
		    <formfield>
		        <label>SmallImage</label>
		        <type>Image</type>
		        <id></id>
		        <valueXpath>SmallImage/URL</valueXpath>
		        <methods>
		        	<setHeight>75</setHeight>
		        	<setWidth>49</setWidth>
		        </methods>
		    </formfield>
		    <formfield>
		        <label>Author</label>
		        <type>AuthorList</type>
		        <id>author</id>
		        <valueXpath>ItemAttributes/Author</valueXpath>
		    </formfield>
		    <formfield>
		        <label>Title</label>
		        <type>DisplayOnly</type>
		        <id>titleDisplay</id>
		        <valueXpath>ItemAttributes/Title</valueXpath>
		    </formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>title</id>
			    <valueXpath>ItemAttributes/Title</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>isbn</id>
			    <valueXpath>ItemAttributes/ISBN</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>ean</id>
			    <valueXpath>ItemAttributes/EAN</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>upc</id>
			    <valueXpath>ItemAttributes/UPC</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>publicationdate</id>
			    <valueXpath>ItemAttributes/PublicationDate</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>publisher</id>
			    <valueXpath>ItemAttributes/Publisher</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>largeImageUrl</id>
			    <valueXpath>LargeImage/URL</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>smallImageUrl</id>
			    <valueXpath>SmallImage/URL</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>asin</id>
			    <valueXpath>ASIN</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>amazonurl</id>
			    <valueXpath>DetailPageURL</valueXpath>
			</formfield>
    	</amazonlist>
    </forms>

</root>
