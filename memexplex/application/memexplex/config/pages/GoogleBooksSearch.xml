<?xml version="1.0" encoding="ISO-8859-1"?>
<root>
    <title>Search Amazon</title>
    <header>none</header>
	<menu>none</menu>
    <applicationmenu>none</applicationmenu>
    <javascript>
    	<script>GoogleBookSearch</script>
    </javascript>

    <forms>
        <form>
            <id>reportFilter</id>
        </form>
    	<ajaxCall>
            <config>ListAjaxCallForm</config>
    	</ajaxCall>
    	<filter>
			<formfield>
			    <type>Search</type>
			    <id>searchString</id>
				<methods>
					<setSize>60</setSize>
					<setMaxlength>250</setMaxlength>
				</methods>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>mine</id>
			</formfield>
			<formfield>
			    <label>Pagination</label>
			    <type>PagingNavigation</type>
			    <id>pagingNavigation</id>
       		    <totalRecordsXpath>Filters/PagingFilter/TotalRows</totalRecordsXpath>
			    <methods>
			        <setRange>5</setRange>
	        		<setRecordsPerPage>10</setRecordsPerPage>
			    </methods>
			</formfield>
    	</filter>
    	<booklist>
    	    <recordDataXpath>feed/entry</recordDataXpath>
		    <formfield>
		        <label>SmallImage</label>
		        <type>ImageGoogleBooksThumbnail</type>
		        <id></id>
		        <valueXpath>link[@rel='http://schemas.google.com/books/2008/thumbnail']/@href</valueXpath>
		        <methods>
		        	<setHeight>75</setHeight>
		        	<setWidth>49</setWidth>
		        </methods>
		    </formfield>
		    <formfield>
		        <label>Author</label>
		        <type>AuthorList</type>
		        <id>author</id>
		        <valueXpath>dc:creator</valueXpath>
		    </formfield>
		    <formfield>
		        <label>Title</label>
		        <type>DisplayOnly</type>
		        <id>titleDisplay</id>
		        <valueXpath>title</valueXpath>
		    </formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>title</id>
			    <valueXpath>title</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>isbn</id>
			    <valueXpath>dc:identifier[1]</valueXpath>
			</formfield>
			<!--formfield>
			    <type>Hidden</type>
			    <id>ean</id>
			    <valueXpath>ItemAttributes/EAN</valueXpath>
			</formfield-->
			<!--formfield>
			    <type>Hidden</type>
			    <id>upc</id>
			    <valueXpath>ItemAttributes/UPC</valueXpath>
			</formfield-->
			<formfield>
			    <type>Hidden</type>
			    <id>publicationdate</id>
			    <valueXpath>dc:date</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>publisher</id>
			    <valueXpath>dc:publisher</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>largeImageUrl</id>
			    <valueXpath>link[@rel='http://schemas.google.com/books/2008/thumbnail']/@href</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>smallImageUrl</id>
			    <valueXpath>link[@rel='http://schemas.google.com/books/2008/thumbnail']/@href</valueXpath>
			</formfield>
			<!--formfield>
			    <type>Hidden</type>
			    <id>asin</id>
			    <valueXpath>ASIN</valueXpath>
			</formfield-->
			<formfield>
			    <type>Hidden</type>
			    <id>googleurl</id>
			    <valueXpath>link[@rel='alternate']/@href</valueXpath>
			</formfield>
			<formfield>
			    <type>Hidden</type>
			    <id>taxonomies</id>
			    <valueXpath>dc:subject</valueXpath>
			</formfield>			
    	</booklist>
    </forms>

</root>
